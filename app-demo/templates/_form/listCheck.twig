<div class="form-group{{ view.errors.ifExists(name, null, ' has-error') }}">
    <div class="col-sm-2">
        <label for="{{ name }}">{{ title }}</label>
    </div>
    <div class="col-sm-10">
        {% for value, label in list %}
            {% set checkbox = view.forms.checkbox(name~'[]', value).label(label) %}
            {% if view.hasInputs %}
                {% set checkbox = checkbox.checked(view.inputs.exists(name, value))%}
            {% else %}
                {% set checkbox = checkbox.checked(view.data.exists(name, value))%}
            {% endif %}
            {{ checkbox|raw }},&nbsp;
        {% endfor %}
        {% include '_form/error.twig' with {'name': name} %}
    </div>
    <div class="clearfix"></div>
</div>
