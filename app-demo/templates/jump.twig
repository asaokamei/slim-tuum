{% extends "layouts/layout.twig" %}

{% block content %}

    <h1>Let's Jump!!</h1>

    <p>This sample shows how to create a form input and shows the error message from the redirection.</p>

    <h3>Sample Form</h3>

    <form method="post" action="">
        
        <input type="hidden" name="_token" value="{{ view.attributes('_token') }}">

        <div class="form-group{{ view.errors.ifExists('jumped', null, ' has-error') }}">
            <label for="jumped">extra text</label>
            <input type="text" name="jumped" id="jumped" value="{{ view.inputs.raw('jumped', 'original text') }}"
                   class="form-control"/>
            {{ view.errors.p('jumped')|raw }}
        </div>

        <div class="form-group{{ view.errors.ifExists('date', null, ' has-error') }}">
            <label for="date" >some date:</label>
            {{ view.forms.date('date').class('form-control').style('width: 12em')|raw }}
            {{ view.errors.p('date')|raw }}
        </div>

        <label>your gender</label>
        <div class="form-group{{ view.errors.ifExists('gender', null, ' has-error') }}">
            {{ view.forms.radio('gender', '1').label('male')|raw }}&nbsp;
            {{ view.forms.radio('gender', '2').label('female')|raw }}&nbsp;
            <label><input type="radio" name="gender" value="3" {{ view.inputs.checked('gender', '3') }} />other</label>
            {{ view.errors.p('gender')|raw }}
        </div>

        <label>your movie</label>
        <div class="form-group{{ view.errors.ifExists('movie', null, ' has-error') }}}">
            {{ view.forms.checkbox('movie[]', '1').label('star wars')|raw }}&nbsp;
            {{ view.forms.checkbox('movie[]', '2').label('star strek')|raw }}&nbsp;
            <label><input type="checkbox" name="movie[]" value="3" {{ view.inputs.checked('movie[]', '3') }} />yamato</label>
            {{ view.errors.p('movie')|raw }}
        </div>

        <label>are you happy?</label>
        <div class="form-group{{ view.errors.ifExists('happy', null, ' has-error') }}">
            <label><input type="checkbox" name="happy" id="happy" value="v" {{ view.inputs.checked('happy', 'v') | raw }} />&nbsp;Yes! I'm happy.</label>
            {{ view.errors.p('happy') | raw }}
        </div>

        <input type="submit" value="jump!" class="btn btn-primary"/>&nbsp;
        <input type="button" value="clear" onclick="location.href=''" class="btn btn-default"/>

    </form>

{% endblock %}

{% block stylesheet %}
<style type="text/css">
    label {
        margin-top:.5em;
    }
</style>
{% endblock %}